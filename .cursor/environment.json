{
  "commands": {
    "test": "pytest -q",
    "test:security": "pytest lab/security/tests/ -v",
    "test:integration": "pytest lab/tests/ -v",
    "lint": "ruff check .",
    "format:check": "ruff format --check . && black --check .",
    "docs:check": "find docs/ -name '*.md' -exec grep -L '<!-- Version:' {} \\;"
  },
  "environment": {
    "PYTHONPATH": ".",
    "LOG_LEVEL": "INFO",
    "PYTHONUNBUFFERED": "1"
  }
}